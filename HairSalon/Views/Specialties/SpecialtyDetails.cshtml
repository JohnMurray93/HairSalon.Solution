<h1>@Model.GetName()'s Stylists</h1>

@foreach (var Stylist in Model.GetStylists())
{
   <p><a class="whiteLink" href="/Stylist/@Stylist.GetId()/Details">@Stylist.GetName()</a>
   <form action="Stylist/@Stylist.GetId()/Delete" method="post">
     <button type="submit" class="btn btn-link">Delete Stylist</button>
   </form></p>
}
<form action='/Specialty/@Model.GetId()/AddStylist' method='post'>
  <div class="form-group">
      <input class="form-control" id='stylist-id' name='stylist-id' type='hidden' value='@Model.GetId()'>
      <label for='inputStylist'>Enter New Stylist:</label>
      <input class="form-control" id='inputStylist' name='inputStylist' type='text' required>
      <button type="submit" class="btn btn-info btn-xs">Submit</button>
  </div>
</form>

<form action="/Specialty/@Model.GetId()/Stylists/Delete" method="post">
  @if (@Model.GetStylists().Count !=  0) 
  {
    <button type="submit" class="btn btn-danger">Delete All of @Model.GetName()'s Stylists</button>
  } else 
  {
  }
</form>

<form action="/Specialties">
    <button type="submit" class="btn btn-info">View All Specialties</button>
</form>

<form action="/">
    <button type="submit" class="btn btn-info">Got To Homepage</button>
</form>

