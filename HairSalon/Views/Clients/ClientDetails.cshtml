<h1>@Model.GetName()'s stylists</h1>

@foreach (var Stylist in Model.GetStylists())
{
   <p><a class="whiteLink" href="/Stylist/@Stylist.GetId()/Details">@Stylist.GetName()</a> <a href="/Client/@Model.GetId()/Update">Edit</a>
   <form action="/Stylist/@Stylist.GetId()/Delete" method="post">
     <button type="submit" class="btn btn-link">Delete Stylist</button>
   </form></p>
}
<form action='/Client/@Model.GetId()' method='post'>
  <div class="form-group">
      <input class="form-control" id='stylist-id' name='stylist-id' type='hidden' value='@Model.GetId()'>
      <label for='inputName'>Enter New Stylist:</label>
      <input class="form-control" id='inputName' name='inputName' type='text' required>
      <button type="submit" class="btn btn-info btn-xs">Submit</button>
  </div>
</form>

<form action="/Stylist/@Model.GetId()/Clients/Delete" method="post">
  @if (@Model.GetStylists().Count !=  0) 
  {
    <button type="submit" class="btn btn-danger">Delete All Clients</button>
  } else 
  {
  }
</form>

<form action="/Stylists">
    <button type="submit" class="btn btn-info">View All Stylists</button>
</form>

<form action="/">
    <button type="submit" class="btn btn-info">Got To Homepage</button>
</form>

